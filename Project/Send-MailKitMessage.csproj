<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Send_MailKitMessage</AssemblyName>
	<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies> <!-- this causes the build to include all assemblies in bin/Debug, which is necessary for testing -->
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Parameters.csv" />
    <None Remove="Use module.ps1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MailKit" Version="2.11.1" />
    <PackageReference Include="MimeKit" Version="2.11.0" />
    <PackageReference Include="Portable.BouncyCastle" Version="1.8.10" />
    <PackageReference Include="PowerShellStandard.Library" Version="5.1.0-preview-06">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent"> <!-- the post-build command is built within the project properties in Visual Studio -->
    <Exec Command="::both of these commands run upon a build from Visual Studio as well as when using &quot;dotnet publish&quot;&#xD;&#xA;&#xD;&#xA;::copy the module manifest to bin/Debug/netstandard2.0&#xD;&#xA;copy &quot;$(ProjectDir)\Send-MailKitMessage.psd1&quot; &quot;$(ProjectDir)\$(OutDir)&quot;&#xD;&#xA;&#xD;&#xA;::copy the module manifest to the Publish directory&#xD;&#xA;copy &quot;$(ProjectDir)\Send-MailKitMessage.psd1&quot; &quot;$(ProjectDir)\..\Publish&quot;" />
  </Target>

</Project>
